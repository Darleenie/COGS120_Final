<body>
    <form action="/" method="get" id="ajaxForm"> 

        {{!-- logo --}}
        <div class="imgcontainer">
            <img src="/images/LOGO_signup.png" style="margin-top:8%; width:150; height:23;" alt="logo">
        </div>

        <div style="text-align:center"><h3>WELCOME!</h3></div>

        <div class="container">
            {{!-- Username --}}
            {{!-- <label for="uname"><b>Username</b></label> --}}
