            {{!-- Email --}}
            {{!-- <label for="psw"><b>Email</b></label> --}}
            <input type="password" placeholder="Email" name="psw" required>

            {{!-- Password --}}
            {{!-- <label for="psw"><b>Password</b></label> --}}
            <input type="password" placeholder="Password" name="psw" required>

            {{!-- Password Comfirm --}}
            {{!-- <label for="psw"><b>Password Confirmation</b></label> --}}
            <input type="password" placeholder="Password Confirmation" name="psw" required>
            <div><br></div>

            {{!-- Login --}}
            <button type="submit"><h2 style="font-size: 20px; color: white; line-height: 0; margin-bottom: 16px;">SIGNUP</h2></button>
        </div>

        <div><br></div>

        <div class="container" style="background-color:#f1f1f1">
            <p class="signup" style="margin-left:15%;">Already have an account? <a href='/'> Login here</a></p>
        </div>
        
    </form>


    </body>
