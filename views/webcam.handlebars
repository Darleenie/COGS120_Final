<html>

<head>
    <title>Compass Webcam</title>
    <meta charset="utf-8">

    {{!-- Add script --}}
    <script src="js/bootstrap.js"></script>
    <script src="js/jquery-1.11.0.js"></script>
    <script src="js/eventHandler.js"></script>

    {{!-- Add link --}}
    <link href="css/bootstrap.css" rel="stylesheet">
    <link href="css/bootstrap-theme.css" rel="stylesheet">
    <link href="css/main.css" rel="stylesheet">
    <link href="css/webcam.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
    {{!-- video --}}
    <div>
        <video autoplay="true" id="videoElement"></video>
        <script>
            var video = document.querySelector("#videoElement");
            if (navigator.mediaDevices.getUserMedia) {
                navigator.mediaDevices.getUserMedia({ video: true })
                    .then(function (stream) {
                        video.srcObject = stream;
                    })
                    .catch(function (err0r) {
                        console.log("Something went wrong!");
                    });
            }
        </script>
    </div>


    {{!-- filter section --}}
        <div id="overlay" >
            <div id="content"></div>
                <div class="wrapper">
                    <div class="box">None</div>
                    <div class="box">Filter A</div>
                    <div class="box">Filter B</div>
                </div>
            </div>
        </div>



    {{!-- start button --}}
    <div class="lower-icon">
        <a href="/create"><i class="fa fa-chevron-left fa-3x block" style="color:white; margin-right:20%"></i></a>
        <button class="record-img block"><img id="record1" src="/images/r1.png" alt="recording"></button>

        <a id="upload"><i class="fa fa-check fa-3x block" id="check" style="color:white; margin-left:16%; opacity:0"></i></a>
    </div>
</body>

</html>