<html>

<head>
	<title>Compass</title>
	<meta charset="utf-8">

	{{!-- Add script --}}
	<script src="/js/bootstrap.js"></script>
	<script src="/js/jquery-3.5.1.js"></script>
	<script src="/js/eventHandler.js"></script>
	<script src="/js/jquery.js"></script>
	<script src="/js/jquery-ui.min.js"></script>
	{{!-- <script src="js/diaryHandler.js"></script> --}}

	{{!-- Add link --}}
	<link rel="stylesheet" href="/css/jquery-ui.min.css">
	<link rel="stylesheet" href="/css/jquery-ui.css">
	<link href="/css/bootstrap.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.css" rel="stylesheet">
	<link href="/css/main.css" rel="stylesheet">
	<link href="/css/menu.css" rel="stylesheet">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

	<style>
		b1 {
			color: white;
		}
	</style>

	<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>

	{{!-- side bar code --}}
	<div id="mySidenav" class="sidenav">
		<img src="/images/LOGO_light.png" alt="logo" class="img-responsive"
			style="width:80px; height:80px; margin-left:10%">
		<div><br></div>
		<a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
		<a href="/about">
			<h3>ABOUT</h3>
		</a>
		<a href="/help">
			<h3>HELP</h3>
		</a>
		<a href="/contact">
			<h3>CONTACT</h3>
		</a> 
	</div>

	<script>
		$(function() {
			$( "#slider-range" ).slider({
			range: true,
			min: 0,
			max: 500,
			values: [ 75, 300 ],
			slide: function( event, ui ) {
				$( "#amount" ).val( "$" + ui.values[ 0 ] + " - $" + ui.values[ 1 ] );
			}
			});
			//$( "#amount" ).val( "$" + $( "#slider-range" ).slider( "values", 0 ) +
			//" - $" + $( "#slider-range" ).slider( "values", 1 ) );
		});
  </script>


	{{!-- filter overlay code --}}
	<div id="myFilter" class="filter">
		{{!-- <a href="javascript:void(0)" class="closeFilter" onclick="closeFilter()">&times;</a> --}}
		{{!-- <a href="/filter/video" style="margin:0 0"> javascript:void(0) --}}
			<a href="/filterDiary/{{types}}" class="closeFilter" onclick="closeFilter()"><i class="fa fa-check-circle" style="font-size: 30px; color: #F3F0E7;"></i></a>
		{{!-- </a> --}}
		<div class="horizontal-container">
			<div class="block">
				<b1>Diary Type</b1>
			</div>
			<div id="videoFilter" class="block">
				<span onclick="applyFilter('video')">
					<b1 id="videoFilter-text" style="border: 1px solid #F3F0E7; padding-left: 10px; padding-right: 10px;">video</b1>
				</span>
			</div>
			<div id="audioFilter" class="block">
					<span onclick="applyFilter('audio')">
						<b1 id="audioFilter-text" style="border: 1px solid #F3F0E7; padding-left: 10px; padding-right: 10px;">voice</b1>
					</span>
			</div>
		</div>
		<div class="horizontal-container">
			<div class="block">
				<b1>Time Frame</b1>
			</div>
			<div class="block">
				<div id="slider-range"></div>
				{{!-- <input type="range" min="1" max="100" value="50"> --}}
			</div>
		</div>
	</div>

	{{!-- put icons in a row --}}
	<div class="top-menu">
		<div id="rectangle"></div>

		{{!-- menu icon --}}
		<div class="block" id="menu-icon">
			<span onclick="openNav()"><i class="fa fa-bars" style="font-size: 20px; color: #995762;"></i></span>
		</div>

		{{!-- search bar --}}
		<div class="block" id="search-bar">
			<input type="text" placeholder="Search...">
			<a href="#"><i class="fa fa-fw fa-search" style="font-size: 20px; color: #995762;"></i></a>
		</div>

		{{!-- filter icon --}}
		<div class="block" , id="filter-icon">
			<span onclick="openFilter()"><i class="fa fa-sliders" aria-hidden="true"
					style="font-size: 20px; color: #995762;"></i></span>
		</div>

		{{!-- manage icon --}}
		<div class="block" id="manage-icon">
			<a href="manage"><i class="fa fa-edit" style="font-size: 20px; color: #995762;"></i></a>
		</div>

	</div>

	<div class="filter-result" style="z-index: 1;weight:500;text-align:center;color: #995762; margin-top:40px"><h5>{{whitespace}}</h5></div>

	{{!-- diary --}}
	<div class="container">
		<div class="diary-page">
			{{#each diaries}}
			<a href="/content/{{id}}">
				<button class="diary">
					<div id="date">
						<h4 style="text-shadow: 4px 4px 5px #797979;">{{date}}</h4>
					</div>
					<img src="{{imageURL}}" alt="Lorem Pixel image" class="img-responsive">
				</button>
			</a>
			<hr>
			{{/each}}
		</div>

	</div>

	{{!-- lower menu --}}
	<div id="rectangle" style="bottom: 0; height: 100px; opacity: 0.6"></div>
	<div class="lower-menu">
		<a href="/world"><i id="world" class="fa fa-globe block" aria-hidden="true"
				style="font-size: 60px; color: #995762;"></i></a>
		<a href="/create"><i id="add" class="fa fa-plus-circle block" aria-hidden="true"
				style="font-size: 61.2px; color: #995762;"></i></a>
		<a href="/account"><i id="account" class="fa fa-user-circle block" aria-hidden="true"
				style="font-size: 52px; color: #995762;"></i></a>
	</div>


</body>

</html>